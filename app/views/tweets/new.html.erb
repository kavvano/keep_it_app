<div class="form">
  <h2>積み上げ投稿フォーム</h2>

  <%= form_with model: @tweet_tag, url: tweets_path, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="tweet">
      <%= f.text_area :text, placeholder: "255文字まで", autofocus: true %>
      <p>タグ</p>
      <%= f.text_area :name, placeholder: "今日の積み上げ", class: "input_tag" %>
      <%= f.label :image do %>
        <%= image_tag "image.png", class: "tweet_image" %>
      <% end %>
      <%= f.file_field :image %>
      <div class="actions">
        <%= f.submit "投稿する" %>
      </div>
    </div>
  <% end %>
</div>